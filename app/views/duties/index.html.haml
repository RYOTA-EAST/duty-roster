-# ヘッダー表示
= render 'shared/header' 

%body 
.content
  .left-content
    %a.duty-btn{ :href => new_duty_path }当番表作成
    %ul.duty-group
      - @dutyall.each do |duty|
        %li.duty-list
          %a{ :href => duty_path(duty.id) }= duty.name
  .main-content
    - case action_name
      - when "index"
        %p トップページ
        = render 'shared/main'
      - when "show"
        %p 詳細表示
        = render 'shared/show'
      - when "new"
        %p 新規作成
        = render 'shared/new', dutynew: @dutynew
      - else
        %p 例外のアクションです
        = action_name

-# フッター表示
= render 'shared/footer' 
